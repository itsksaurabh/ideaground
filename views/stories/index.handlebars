<h1>Ideas</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card cardideas">
        <div class="card-image">
          {{#if user}}
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="story-text">{{stripTags (truncate body 150)}}</p>
          <br>
          <hr>
          <div class="deadline">{{countdown enddate ../user.id}}</div>
          <hr>
          <br>
          <div class="chip">
            <img src="{{user.image}}">
            <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No Ideas found</p>
  {{/each}}
</div>